{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ESNext"
        ],
        "types": [
            "bun-types"
        ],
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "paths": {
            "gravito-core": [
                "../../core/src/index.ts"
            ],
            "@gravito/orbit-cache": [
                "../orbit-cache/src/index.ts"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}