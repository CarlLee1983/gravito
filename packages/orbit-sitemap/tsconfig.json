{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@gravito/orbit-sitemap": [
                "./src/index.ts"
            ]
        },
        "rootDir": "src",
        "outDir": "dist",
        "exactOptionalPropertyTypes": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}