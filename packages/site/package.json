{
    "name": "@gravito/site",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "build": "bun build ./src/index.ts --outdir ./dist --target node",
        "generate": "bun run ./build-static.ts",
        "deploy": "bun run generate && gh-pages -d dist-static --dotfiles",
        "start": "bun run ./dist/index.js"
    },
    "dependencies": {
        "gravito-core": "workspace:*",
        "@gravito/orbit-content": "workspace:*",
        "@gravito/orbit-i18n": "workspace:*",
        "@gravito/orbit-sitemap": "workspace:*",
        "hono": "^4.0.0"
    },
    "devDependencies": {
        "@types/bun": "latest"
    }
}