{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "jsx": "react-jsx",
        "types": [
            "bun-types",
            "vite/client"
        ],
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "baseUrl": ".",
        "paths": {
            "gravito-core": [
                "../../packages/core/src/index.ts"
            ],
            "@gravito/*": [
                "../../packages/*/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*",
        "build-static.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}